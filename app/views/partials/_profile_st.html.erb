Student profile
<br>
<%= @student.firstname %>
<br>
<%= @student.lastname %>
<br>
<%= @student.email %>
<br>
<% unless @student.avatar.attachment.nil? %>
	<%= image_tag @student.avatar %>
<% end %>
<br>
<% @notify.each do |x| %>
	<% course?(x.group_id) %>
	<% teacher?(@course.id) %>
	<%= @course.name + " | " + teacher_fullname?(@teacher)%>
	<%= link_to "Attend!", confirm_path(x.id), method: :post %>
	<br>
<% end %>
